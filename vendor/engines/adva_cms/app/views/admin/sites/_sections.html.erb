<% unless sections.empty? %>
  <ul>
  <% sections.each do |section| %>
    <li style="padding-left: 15px;">
      <%= link_to section.title, admin_section_path(@site, section) %>
      <%= render :partial => 'sections', :locals => {:sections => section.children} %>
    </li>
  <% end %>
  </ul>
<% end %>