<h2>
  Overview: <%= @site.title %>
</h2>

<p><%= link_to "Add a section", new_admin_section_path(@site) %></p>
<%= render :partial => 'sections', :locals => { :sections => @site.sections.roots } %>


<h2>
  Activity
</h2>
<%= render :partial => 'admin/activities/activities', :object => @activities %>

<% content_for :sidebar do %>
  <%= render :partial => 'user_activity', :locals => {:users => @users} %>
  <%= render :partial => 'unapproved_comments', :locals => {:contents => @contents} %>
<% end %>