<h4>General settings</h4>
<fieldset>
	<p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>  
    <%= f.label :permalink %>
    <%= f.text_field :permalink %>
  </p>
  <% unless @site.current_theme_template_paths.empty? %>
    <p>
      <%= f.label :template %>
      <%= f.select :template, @site.current_theme_template_paths, :include_blank => true  %>
    </p>
  <% end %>
  <% unless @site.current_theme_layout_paths.empty? %>
    <p>
      <%= f.label :layout %>
      <%= f.select :layout, @site.current_theme_layout_paths, :include_blank => true  %>
    </p>  
  <% end %>
<p>  
  <%= f.label :content_filter, 'Content filter' %>
  <span class="hint">When articles are posted, they use this as the default setting.</span>
  <%= f.select :content_filter, filter_options %>
</p>
</fieldset>

<%= render :partial => "admin/sections/settings/#{@section.type.underscore}", :locals => {:f => f} %>

<h4>Comments</h4>
<fieldset>
  <p>  
    <%= f.label :comment_age, 'Comments' %>
    <%= f.select :comment_age, comment_expiration_options %>
  </p>
</fieldset>

<%= render :partial => "admin/sections/settings/permissions", :locals => {:f => f} %>

