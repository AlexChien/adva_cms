<h4>Permissions</h4>
<fieldset>
  <% @section.required_roles.each do |permission, default_role| %>
    <p>  
      <%= label_tag "section_required_roles_#{permission}", permission.to_s.titleize %>
      <%= select_tag "section[required_roles][#{permission}]", options_for_select(Role.names.zip(Role.names.map(&:downcase)), default_role.to_s), :id => "section_required_roles_#{permission}" %>
    </p>
  <% end %>
</fieldset>