<% if article %>
  <div id="<%= dom_id article %>" class="entry clearing">
  	<div class="meta">
  	  <p>
  	    <%= datetime_with_microformat(article.published_at, :format => :long) %><br />
  	    by: <%= article.author_name %><br />
    	  <%= link_to_content_comments article unless mode == :single %>
    	<% authorized_tag :span, :update, article do -%>
      		<%= link_to 'edit', edit_admin_article_path(@site, @section, article) %>
		<% end -%>
  	  </p>
  	  <p>
      	<%= links_to_content_categories article, "in: %s<br />" %>
      	<%= links_to_content_tags article, "tagged: %s<br />" %>
      </p>
  	</div>
  	<div class="content">
    	<h2>
    	  <%= link_to_content article %>
    	</h2> 
  	  <% if article.has_excerpt? %>
  	    <%= article.excerpt_html %>
  	    <p><%= link_to_content "Read the rest of this entry", article unless mode == :single %></p>
  	  <% end %>
      <%= article.body_html if mode == :single || !article.has_excerpt? %>
    </div>      
  </div>
<% end %>