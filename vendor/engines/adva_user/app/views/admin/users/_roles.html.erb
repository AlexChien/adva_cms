<h4>Roles</h4>

<fieldset>
  <% if current_user.has_role?(:superuser) %>
  <p>
    <%= check_box_tag "user[roles][superuser]", '1', @user.has_exact_role?(:superuser), :id => "user_roles_superuser" %>
    <%= hidden_field_tag "user[roles][superuser]", '0' %>
    <%= f.label "roles_superuser", "Superuser", :class => 'light' %>
  </p>
  <% end %>
  <% if @site %>
    <p>
      <%= check_box_tag "user[roles][admin][Site][#{@site.id}]", '1', @user.has_exact_role?(:admin, @site), :id => "user_roles_admin_site_#{@site.id}" %>
      <%= hidden_field_tag "user[roles][admin][Site][#{@site.id}]", '0' %>
      <%= f.label "roles_admin_site_#{@site.id}", "Admin for: #{@site.name}", :class => 'light' %>
    </p>
  <% end %>
</fieldset>