<h2>Register a user account</h2>

<% form_for :user, :url => user_path, :html => {:id => 'register'} do |f| %>
  <h4>Profile</h4>

  <fieldset>  
    <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name  %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name  %>
    </p>  
    <p>   
      <%= f.label :email %>
      <%= f.text_field :email  %>
    </p>  
    <p>   
      <%= f.label :homepage %>
      <%= f.text_field :homepage  %>
    </p> 
  </fieldset>

  <h4>User</h4>

  <fieldset>
    <p>
      <%= f.label :login %>
      <%= f.text_field :login  %>
    </p> 
    <p>
      <%= f.label :password %>
      <%= f.password_field :password  %>
    </p> 
  </fieldset>


  <p class="buttons">
  	<%=submit_tag 'Register'%> or
  	<%= link_to 'Login', login_url, :id => 'login' %>
  	<%= link_to 'Reset password', new_password_path %>
  </p>
<% end %>


