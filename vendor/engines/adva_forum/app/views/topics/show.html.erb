<h2>
  <%= @topic.title %>  
  <span class="meta">
    <%= topic_attributes @topic %> &middot;
    <%= link_to 'edit', edit_topic_path(@section, @topic.permalink) %> &middot;
    <%= link_to 'delete', topic_returning_path(@section, @topic.permalink), { :confirm => "Are you sure you wish to delete this topic?", :method => :delete } %>      
  </span>
</h2>

<!-- post count, voices count -->
<%= render :partial => 'post', :collection => @posts %>

<p class="clearing">
  <%= link_to_prev_topic('&larr; previous', @topic, :class => :previous) %>
  <%= link_to_next_topic('next &rarr;', @topic, :class => :next) %>
</p>

<%= will_paginate @posts, :id => 'pagination' %>

<%= render :partial => 'comments/form', :locals => {:commentable => @topic, :url => topic_posts_path(@section, @topic) } %>
