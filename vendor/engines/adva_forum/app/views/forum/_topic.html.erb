<tr>
  <td class="topic<%= ' locked' if topic.locked? %>">
    <%= 'Sticky: ' if topic.sticky? %>
    <%= link_to_topic(topic) %>
  </td>
  <td>
    <%= topic.comments_count %>
  </td>
  <td>
    <%= time_ago_in_words_with_microformat(topic.last_updated_at, :format => '%d.%m.%y %H:%M') %>
    by <%= topic.last_author_name %>
    <%= link_to_last_post('view', topic) %>
  </td>
</tr> 