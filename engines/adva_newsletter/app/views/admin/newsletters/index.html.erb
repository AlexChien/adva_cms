<% content_for :sidebar do %>
  <%= render :partial => 'admin/layouts/sidebar_manage', :locals => {:active => :newsletters} %>
  <%= render :partial => 'sidebar_actions' %>
<% end %>

<h2><%= t('adva.newsletters.labels.header') %></h2>

<% unless @newsletters.empty? %>
  <table id="newsletters" class="list" cellspacing='0'>
    <thead>
      <tr>
        <th scope="col"><%= t('adva.newsletters.labels.name') %></th>
        <th scope="col"><%= t('adva.newsletters.labels.issues') %></th>
        <th scope="col"><%= t('adva.newsletters.labels.subscribers') %></th>
      </tr>
    </thead>
    <tbody>
      <% @newsletters.each do |newsletter| %>
        <tr>
          <td><%= link_to h(newsletter.title), admin_newsletter_path(@site, newsletter) %></td>
          <td><%= link_to newsletter.issues_count, admin_issues_path(@site, newsletter) %></td>
          <td><%= link_to newsletter.subscriptions_count, admin_subscriptions_path(@site, newsletter) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <div class="empty">
    <%= t('adva.newsletters.no_newsletters') %>
    <%= link_to t('adva.newsletters.links.new'), new_admin_newsletter_path(@site) %>
  </div>

<% end %>
