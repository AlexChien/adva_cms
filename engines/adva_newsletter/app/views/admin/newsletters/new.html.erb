<% content_for :sidebar do %>
  <%= render :partial => 'admin/layouts/sidebar_manage', :locals => {:active => :newsletters} %>
<% end %>

<% split_form_for :newsletter, @newsletter, :url => admin_newsletters_path, :html => {:multipart => true, :id => 'content_form'} do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>  
  <p class="buttons">
    <%= submit_tag t(:'adva.common.save') %> <%= t(:'adva.common.connector.or') %>
    <%= link_to t(:'adva.common.cancel'), admin_newsletters_path %>
  </p>
<% end %>
