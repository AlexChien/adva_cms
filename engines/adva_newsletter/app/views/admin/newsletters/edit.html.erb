<% content_for :sidebar do %>
  <%= render :partial => 'admin/shared/sidebar_manage' %>
<% end %>

<h2><%= t(:'adva.newsletter.titles.edit') %></h2>
<% split_form_for :newsletter, @newsletter, :url => admin_newsletter_path, :html => {:method => :put, :multipart => true, :id => 'content_form'} do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>  
  <p class="buttons">
    <%= f.submit t(:'adva.common.save') %> <%= t(:'adva.common.connector.or') %>
    <%= link_to t(:'adva.common.cancel'), admin_newsletters_path(@site) %>
  </p>
<% end %>
