<% content_for :sidebar do %>
  <%= render :partial => 'admin/shared/sidebar_manage' %>
  <h3><%= t(:'adva.titles.actions') %></h3>
  <ul>
    <%= render :partial => 'admin/shared/sidebar_common' %>
    <li><%= link_to t(:'adva.users.links.new'), new_admin_site_user_path %></li>
  </ul>
<% end %>

<% if @newsletter.available_users.present? %>

  <% split_form_for :subscription, @subscription, :url => admin_subscriptions_path, :html => { :multipart => true } do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>

    <%= save_or_cancel_links(f, :cancel_url => admin_subscriptions_path, :save_text => t(:'adva.common.add')) %>
  <% end %>

<% else %>

  <div class="empty">
    <%= t(:'adva.sites.no_available_users') %>
    <%= new_resource_link User, new_admin_site_user_path, :text => t(:'adva.users.links.new') %>
  </div>
<% end %>
