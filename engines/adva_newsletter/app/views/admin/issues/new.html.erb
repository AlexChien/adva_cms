<% content_for :sidebar do %>
  <%= render :partial => "admin/shared/sidebar_manage" %>
  <%= render :partial => "sidebar_actions" %>
  <%= render :partial => "optional_settings" %>
  <%= render :partial => "tracking" %>
<% end %>

<% split_form_for :issue, @issue, :url => admin_issues_path, :html => {:multipart => true, :id => "content_form"} do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>  

  <% f.buttons do %>
    <%= submit_tag t(:'adva.common.save') %> <%= t(:'adva.common.connector.or') %>
    <%= link_to t(:'adva.common.cancel'), admin_issues_path %>
  <% end %>
<% end %>
