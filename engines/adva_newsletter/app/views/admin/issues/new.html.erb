<% content_for :action_nav do %>
	<%= Menu.instance(:'admin.newsletters.manage').render(self) %>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => "optional_settings" %>
<% end %>

<% split_form_for :issue, @issue, :url => admin_issues_path, :html => { :multipart => true } do |f| %>
  <%= render :partial => "form", :locals => {:f => f} %>  

  <%= save_or_cancel_links(f, :cancel_url => admin_issues_path) %>
<% end %>
