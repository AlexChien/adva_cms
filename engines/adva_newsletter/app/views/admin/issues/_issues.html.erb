<% if issues.present? %>
  <table class="list" cellspacing="0">
    <thead>
      <tr>
        <th scope="col"><%= t(:'adva.newsletter.label.issue_name') %></th>
        <th scope="col"><%= t(:'adva.newsletter.label.issue_created_at') %></th>
        <th scope="col">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
    <% issues.each do |issue| %>
      <tr>
        <td><%= link_to h(issue.title), admin_issue_path(@site, @newsletter, issue), :class => issue.state %></td>
        <td><%= issue.created_at.to_s(:db) %></td>
        <td class="table_menu">
          <%= view_resource_link(issue, admin_issue_path(@site, @newsletter, issue)) %>
          <%= edit_resource_link(issue, edit_admin_issue_path(@site, @newsletter, issue)) %>
          <%= delete_resource_link(issue, admin_issue_path(@site, @newsletter, issue)) %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <div class="empty">
    <%= t(:'adva.newsletter.no_issues') %>
    <%= link_to t(:'adva.newsletter.link.new_issue'), new_admin_issue_path(@site, @newsletter) %>
  </div>
<% end %>
