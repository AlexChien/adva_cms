<blockquote>
  <%= strip_tags(comment.body) %>
</blockquote>

<cite>
  &mdash; <%= comment.author_link %>
  <%= "(#{comment.author_email})" %> 
  said <%= time_ago_in_words comment.created_at %> ago
  <% if comment.approved? %>
    <%= link_to t(:'adva.comments.links.unapprove'), admin_comment_path(comment, "comment[approved]" => 0, :return_to => "#{request.request_uri}##{dom_id(comment)}"), :method => :put  %> | 
  <% else %>
    <%= link_to t(:'adva.comments.links.approve'), admin_comment_path(comment, "comment[approved]" => 1, :return_to => "#{request.request_uri}##{dom_id(comment)}"), :method => :put  %> | 
  <% end %>
  <%= link_to t(:'adva.comments.links.edit'), edit_admin_comment_path(comment, :return_to => "#{request.request_uri}##{dom_id(comment)}") %> |
  <%= link_to t(:'adva.comments.links.delete'), admin_comment_returning_path(comment, :return_to => "#{request.request_uri}##{dom_id(comment)}"), :method => :delete, :confirm => t(:'adva.comments.confirm_delete') %> |
  <%= link_to_content_comment(t(:'adva.comments.links.view'), comment) %>
</cite>
