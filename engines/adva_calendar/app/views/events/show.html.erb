<div id="<%= dom_id @event %>" class="entry clearing">
  <div class="meta">
    <p><%= link_to 'all pages', events_path %></p>
    <p>
      <%= datetime_with_microformat(@event.updated_at, :format => :long) %>
    </p>

    <p>
      <%#= links_to_content_categories(@event, 'in: %s') %><br />
      <%= links_to_content_tags(@event, 'tagged: %s') %>
    </p>
  </div>
  <div class="content">
    <h2><%= link_to_content @event %></h2>
    <%= @event.body_html %>
  </div>
</div>


<%= render :partial => 'footer' %>