<div id="<%= dom_id @event %>" class="entry clearing">
  <div class="meta">
    <p><%= link_to 'all pages', calendar_events_path(@section) %></p>
    <p>
    <% if @event.enddate.blank? %>
      <%= t(:'adva.calendar.starting_at', @event.startdate)  %>
    <% else %>
      <%= t(:'adva.calendar.from_to', :startdate => @event.startdate, :enddate => @event.enddate) %>
    <% end %>
    </p>

    <p>
      <%= links_to_content_categories(@event, :'adva.common.content_categories') %><br />
      <%= links_to_content_tags(@event, :'adva.common.content_tags') %>
    </p>
  </div>
  <div class="content">
    <h2><%= link_to_event @event %></h2>
    <%= h(@event.host) %>
    <%= @event.body_html %>
  </div>
</div>


<%= render :partial => 'footer' %>