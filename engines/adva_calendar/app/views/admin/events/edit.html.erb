<p>
  <%= link_to "Delete this event", admin_calendar_event_path, { :confirm => "Are you sure you wish to delete this event?", :method => :delete } %> &middot;
  <%= link_to "Preview", calendar_event_url(@event.section_id, @event) %>
</p>

<% split_form_for :event, @event, :url => admin_calendar_event_path, :html => {:multipart => true, :method => :put, :id => 'content_form'} do |f| -%>
	
	<%= render :partial => "form", :object => f %>
	
	<p class="buttons">
  		<%= f.submit "Apply Changes" %>
  		<%= link_to "cancel", admin_calendar_events_path %>
	</p>
<% end %>
