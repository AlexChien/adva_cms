<li class="activity <%= activity_css_classes(activity) %> <%= cycle '', 'highlight', :name => "activities" %> clearfix">
  <p class="meta">
    <%= activity_datetime activity, recent %><br />
    <%= link_to_activity_user activity %>
  </p>
  <p>
    <%=t :'adva.actions.view.actions', :type => activity.object_attributes['type'], 
      :actions => activity.all_actions.to_sentence,
      :activity => link_to(activity.section.title, admin_articles_path(activity.section.site, activity.section)) 
    %>
  </p>
  <%= link_to activity.title, activity_object_edit_url(activity) %>
</li>