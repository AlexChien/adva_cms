<li class="activity <%= activity_css_classes(activity) %> <%= cycle '', 'highlight', :name => "activities" %>">
  <p>
    <%= activity_datetime activity, recent %>
    <%= link_to_activity_user activity %>
    <%= link_to_content activity.object if activity.object %>
  </p>
  <p><%= t(:'adva.activity.topic', :actions => activity.all_actions.to_sentence) %></p>
  <p><%= truncate strip_tags(activity.title), 100 %></p>
  
	<% if activity.object -%>
    <ul>
			<li>
				<%= edit_resource_link(activity.object, edit_topic_path(activity.object.section, activity.object), :text => t(:'adva.common.edit')) %>
			</li>
			<li>
				<%= delete_resource_link(activity.object, topic_path(activity.object.section, activity.object), :confirm => t(:'adva.topics.confirm_delete')) %>
			</li>
    </ul>
  <% end -%>    
</li>
