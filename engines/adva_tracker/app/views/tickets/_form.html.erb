<% f.field_set do %>
  <%= hidden_field_tag "ticket[ticketable_type]",
    @ticket.ticketable_type.present? ? @ticket.ticketable_type : parent_type %>
  <%= hidden_field_tag "ticket[ticketable_id]", 
    @ticket.ticketable_id.present? ? @ticket.ticketable_id : parent_id %>

  <%= f.text_field :title, :class => "big",
    :label => :"adva.tracker.label.ticket_title" %>

  <%= f.text_area  :body, :class => "fat wysiwyg",
    :row => 10, :label => :"adva.tracker.label.ticket_body" %>
<% end %>
