<% content_for :sidebar do %>
  <%= render "admin/shared/tracker_manage" %>
  <%= render "sidebar_actions" %>
<% end %>

<h2><%= h(@project.title) %></h2>
<p><%= h(@project.desc) %></p>

<% if @tickets.present? %>
<% else %>
  <div class="empty">
    <%= t(:"adva.tracker.message.no_tickets") %>
    <%= t(:"adva.tracker.message.add_new_one_at_frontend") %>
    <%= link_to t(:"adva.tracker.link.new_ticket"), new_ticket_path(@section, @project) %>
  </div>
<% end %>
