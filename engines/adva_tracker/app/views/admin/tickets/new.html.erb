<% content_for :sidebar do %>
  <%= render "admin/shared/sidebar_manage" %>
<% end %>

<h2><%= t(:'adva.tracker.label.new_ticket') %></h2>

<% split_form_for :ticket, @ticket, :url => admin_tickets_path,
                  :html => {:multipart => true} do |f| %>

  <%= render "form", :f => f %>

  <% f.buttons do %>
    <%= submit_tag t(:"adva.common.save") %> <%= t(:"adva.common.connector.or") %>
    <%= link_to t(:"adva.common.cancel"), admin_tickets_path(@site, @section) %>
  <% end %>
<% end %>
