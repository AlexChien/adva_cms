<% f.field_set do %>
  <%= hidden_field_tag "ticket[ticketable_type]", request.url.split("/")[-4].singularize.capitalize %>
  <%= hidden_field_tag "ticket[ticketable_id]",   request.url.split("/")[-3] %>

  <%= f.text_field :title, :class => "big",
    :label => :"adva.tracker.label.ticket_title" %>

  <%= f.text_area  :body, :class => "fat wysiwyg",
    :row => 10, :label => :"adva.tracker.label.ticket_body" %>
<% end %>
