<% content_for :sidebar do %>
  <h3><%= t(:'adva.titles.manage') %></h3>
  <ul>
    <li><%= link_to t(:'adva.titles.site'), edit_admin_site_path(@site), :id => 'manage_site' %></li>
    <li><%= link_to t(:'adva.titles.themes'), admin_themes_path(@site), :id => 'manage_themes' %></li>
    <li><%= link_to t(:'adva.titles.cache'), admin_cached_pages_path(@site), :id => 'manage_cache' %></li>
  </ul>

  <h3><%= t(:'adva.titles.actions') %></h3>
  <ul>
    <li><%= link_to t(:'adva.themes.links.create_file'), new_admin_theme_file_path(@site, @theme.id) %></li>
    <li><%= link_to t(:'adva.themes.links.upload_file'), import_admin_theme_files_path(@site, @theme.id) %></li>
    <li><%= link_to t(:'adva.themes.links.edit_theme'), edit_admin_theme_path(@site, @theme.id) %></li>
    <li><%= link_to t(:'adva.themes.links.download_theme'), export_admin_theme_path(@site, @theme.id) %></li>
  </ul>
  
  <%= render :partial => 'admin/theme_files/files' %>
<% end %>

<h2>Upload theme file</h2>

<% form_tag upload_admin_theme_files_path(@site, @theme.id), { :method => :post, :multipart => true } do %>
	<fieldset>
    <p><%= t(:'adva.themes.upload_template_or_asset') %></p>
    <p><%= file_field_tag("file[data]", :id => 'file_data') %></p>
  </fieldset>

  <% buttons do %>
    <%= submit_tag t(:'adva.common.upload') %> or 
    <%= link_to t(:'adva.common.cancel'), admin_theme_path(@site, @theme.id) %>
  <% end %>
<% end %>
