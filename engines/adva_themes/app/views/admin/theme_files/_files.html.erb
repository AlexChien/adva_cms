<% ['templates', 'stylesheets', 'javascripts', 'images'].each do |type| files = @theme.send(type) %>
  <% unless files.empty? %>
    <h3><%= t(:"adva.theme_files.types.#{type}") %></h3>
    <ul>
      <% files.each do |file| %>
        <li><%= link_to file.base_path, admin_theme_file_path(@site, @theme.id, file.id) %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
