<% content_for :action_nav do -%>
	<%= Menu.instance(:'admin.sites.manage').render(self) %>
	<%= Menu.instance(:'admin.sites.themes.actions').render(self) %>
<% end -%>

<h2><%= t(:'adva.titles.themes') %></h2>
<% unless @themes.empty? -%>
  <%= render :partial => 'theme', :collection => @themes %>
<% else -%>
  <div class="empty">
    <%= t(:'adva.themes.no_themes_available') %>
    <%= link_to t(:'adva.themes.links.create_one_now'), new_admin_theme_path %>
  </div>
<% end -%>
