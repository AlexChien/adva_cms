<% if @site and !@site.new_record? and @section and !@section.new_record? %>
  <ul class="sub-nav clearfix">
    <!-- TODO instead, have the controller register the actions -->
    <li><%= link_to_section_main_action(@site, @section) %></li>
    <% if @section.accept_comments? %>
      <li><%= link_to content_tag(:span, t(:'adva.titles.comments')), admin_comments_path(:section_id => @section) %></li>
    <% end %>
    <% if @section.instance_of?(Section) || @section.instance_of?(Blog) || @section.instance_of?(Wiki) %>
      <li><%= link_to content_tag(:span, t(:'adva.titles.categories')), admin_categories_path(@site, @section) %></li>
    <% end %>
    <li><%= link_to content_tag(:span, t(:'adva.titles.settings')), edit_admin_section_path(@site, @section) %></li>
  </ul>
<% end %>
