<%= render :partial => 'action_nav' %>

<% if @plugins.size > 0 -%>
  <table id="plugins" class="list" cellspacing="0" cellpadding="0">
    <thead>
      <tr>
        <th scope="col"><%= t(:'adva.plugins.attributes.name') %></th>
        <th scope="col"><%= t(:'adva.plugins.attributes.version') %></th>
        <th scope="col"><%= t(:'adva.plugins.attributes.author') %></th>
        <th scope="col"><%= t(:'adva.plugins.attributes.homepage') %></th>
      </tr>
    </thead>
    <tbody id="articles">
      <%= render :partial => 'plugin', :collection => @plugins %>
    </tbody>
  </table>
  
<% else %>
  <div class="empty">
    <%= t(:'adva.plugins.no_plugins_installed') %>
  </div>
<% end %>
