<%= render :partial => 'action_nav' %>

<% if @plugins.size > 0 -%>
  <table>
    <thead>
      <tr>
        <th>
					<%= t(:'adva.plugins.attributes.name') %>
				</th>
        <th>
					<%= t(:'adva.plugins.attributes.version') %>
				</th>
        <th>
					<%= t(:'adva.plugins.attributes.author') %>
				</th>
        <th>
					<%= t(:'adva.plugins.attributes.homepage') %>
				</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'plugin', :collection => @plugins %>
    </tbody>
  </table>
  
<% else %>
  <div class="empty">
    <%= t(:'adva.plugins.no_plugins_installed') %>
  </div>
<% end %>
