<fieldset class="clearfix">
  <div class="col1">
    <p>
      <%= f.label :localpath, 'Filename' %>
      <%= f.text_field :localpath %>
    </p>
    <% if @file.text? %>
    <p>
      <%= f.label :data %>
      <%= f.text_area :data %>
    </p> 
    <% else %>
      <p><%= image_tag @file.path.to_s %></p>
    <% end %>
    <p class="buttons">
      <%= submit_tag 'Save' %> or 
      <%= link_to 'cancel', admin_theme_path(@site, @theme.id) %>
    </p>
  </div>
</fieldset>