<% content_for :sidebar do -%>
<h3>Manage</h3>
<ul>
  <li><%= link_to 'Site', edit_admin_site_path(@site) %></li>
  <li><%= link_to 'Themes', admin_themes_path(@site) %></li>
  <li><%= link_to 'Cache', admin_cached_pages_path(@site) %></li>
</ul>

<h3>Actions</h3>
<ul>
  <li><%= link_to 'Delete this site', admin_site_path, { :confirm => "Are you sure you wish to delete this site?", :method => :delete } %></li>
</ul>
<% end -%>

<% form_for :site, @site, :url => admin_site_path, :html => { :method => :put } do |f| -%>
  <%= render :partial => 'form', :locals => {:f => f, :site => @site} %>
  <p class="buttons">
    <%= f.submit :Save %> or 
    <%= link_to 'cancel', admin_site_path %>
  </p>
<% end -%>
