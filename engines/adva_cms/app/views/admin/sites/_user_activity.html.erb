<% unless users.blank? %>
  <h3><%= t(:'adva.titles.recent_activity') %></h3>
  <ul id="recent_users">
    <% users.each do |user| %>
      <li class="<%= cycle '', 'highlight', :name => 'recent_users' %> clearfix">
        <%= gravatar_img user %><%= link_to who(user), :controller => 'users', :action => 'show', :id => user %><br /> 
        <%= t(:'adva.users.info.showed_up', :time_ago => distance_of_time_in_words_to_now(user.updated_at)) %> ago
      </li>
    <% end %>
  </ul>
<% end %>
