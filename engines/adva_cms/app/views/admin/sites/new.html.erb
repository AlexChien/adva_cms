<h3><%= t(:'adva.sites.title.create') %></h3>

<% form_for :site, @site, :url => admin_sites_path do |f| %>
  <%= render :partial => 'form', :locals => {:f => f, :site => @site} %>
  
  <h2><%= t(:'adva.sites.title.home_section') %></h2>  
  <fieldset class="clearfix">
  <fieldset class="col">
    <% fields_for :section, @section do |section| %>
      
        <%= section.label :type %>
        <% Section.types.each_with_index do |type, ix| %>
          <%= section.radio_button :type, type %>
          <label for="section_type_<%= type.downcase %>" class="light" style="padding-right: 5px; padding-top: 5px;">
            <%= type %>
          </label>
        <% end %>
      </fieldset>
      <fieldset class="col">
        <%= section.label :title %>
        <%= section.text_field :title %>
   
    <% end %>
  </fieldset>
  </fieldset>
  
  <p class="buttons">
    <%= f.submit :Create %>
  </p>
<% end %>
