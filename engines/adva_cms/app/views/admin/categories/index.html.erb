<% unless @categories.empty? %>
  <% content_for :sidebar do -%>
  <h3>Actions</h3>
  <ul>
    <li><%= link_to 'New category', new_admin_category_path %></li>
    <li><%= link_to_function 'Reorder categories', "categories_tree.toggle(this, 'Done reordering');", :id => 'reorder_categories' %>
    <%= image_tag '/images/adva_cms/indicator.gif', :id => 'categories_indicator', :style => 'display: none;' %></li>
  </ul>
  <% end -%>

  <p class="total">
    Total: <%= content_tag :strong, pluralize(@categories.total_entries, "category") %>.
  </p>

  <table id="categories" class="list">
    <thead>
      <tr>
        <th scope="col">Category name</th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => 'category', :collection => @categories %>
    </tbody>
  </table>

  <script>
    var categories_tree = new SortableTree('categories', {
      onDrop: function(drag, drop, event) {
        <%= remote_function(:url => admin_categories_path(@site),
                            :method =>   :put,
                            :with   =>   "drag.to_params()",
                            :loading =>  "$('categories_indicator').show()",
                            :complete => "$('categories_indicator').hide()" ) %>
      }
    });
  </script>
  
<% else %>
  <div class="empty">
    You don't have any categories created in <%= @section.title %>. 
    <%= link_to "Create one now &raquo;", new_admin_category_path %>
  </div>
<% end %>