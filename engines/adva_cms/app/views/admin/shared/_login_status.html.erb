<div id="login_status">
	<%#= admin_site_select_tag if Site.multi_sites_enabled %>
  <% if current_user %>
		<%= t(:'adva.users.info.logged_in_as', :name => link_to_profile(@site, :name => current_user.name)) %> &middot;
		<%= link_to t(:'adva.links.logout'), logout_path, :method => :delete %> &middot;
	<% else %>
  	You're not logged in <%= link_to t(:'adva.links.login'), :controller => 'session', :action => 'new' %> &middot;
  <% end %>
  <% if @site %>
    <%= link_to t(:'adva.titles.website') + ' Â»', "http://#{@site.host}", :id => 'go_to_website' %>
  <% end %>
</div>
