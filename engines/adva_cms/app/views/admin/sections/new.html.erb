<h2><%= t(:'adva.sections.titles.create') %></h2>

<% form_for :section, @section, :url => admin_sections_path do |f| %>
	<% f.field_set do %>
		<% column do %>
    	<%= f.text_field :title, :label => true %>
		<% end %>
		<% column do %>
     	<%= f.collection_select :type, Section.types, :to_s, :to_s, {}, :label => true %>
    <% end %>
  <% end %>

  <% save_or_cancel_links(f) %>
<% end %>
