<% content_for :sidebar do -%>
<h3>Manage</h3>
<ul>
  <li><%= link_to "Articles", admin_articles_path(@site, @section) %></li>
  <li><%= link_to "Categories", admin_categories_path(@site, @section) %></li>
  <li><%= link_to "Settings", edit_admin_section_path(@site, @section) %></li>
</ul>

<h3>Actions</h3>
<ul>
  <li><%= link_to 'Delete this section', admin_section_path(@site, @section), { :confirm => "Are you sure you wish to delete this section?", :method => :delete } %></li>
</ul>
<% end -%>

<% form_for :section, @section, :url => admin_section_path(@site, @section), :html => {:method => :put} do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <p class="buttons">
	  <%= submit_tag 'Save' %>
	</p>
<% end %>