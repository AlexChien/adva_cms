<% else %>
  <div class="empty">
    
    <%= t(:'adva.boards.info.no_boards_in_forum', :forum => @section.title) %> 
    <%= link_to t(:'adva.boards.links.create_now') + ' &raquo;', new_admin_board_path %>
  </div>
<% end %>