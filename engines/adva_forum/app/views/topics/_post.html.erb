<div>
  <div>
    <p>
      <%= post.created_at.to_s(:long) %>
    </p>
    <p>
      <%= gravatar_img post.author %>
      <%= post.author_link %><br>
      <%#= post.author.roles.map(&:name).map(&:to_s).map(&:camelize).join(', ') %><br> <!-- TODO does not work with anonymous users -->
    </p>
  </div>
  <div>
    <%= post.body_html %>
    <p>
      <% authorized_tag :span, :update, post do %>
        <%= link_to t(:'adva.links.edit'), edit_topic_post_returning_path(@section, @topic, post) %>
      <% end %>
			<% unless post == @topic.initial_post %>
      	<% authorized_tag :span, :destroy, post do %>
        &middot; <%= link_to t(:'adva.links.delete'), topic_post_returning_path(@section, @topic, post), { :confirm => t(:'adva.topics.confirm_destroy'), :method => :delete } %>
      	<% end %>
			<% end %>
    </p>
  </div>
</div>
