<%
	table_for @contact_mails do |t|
		t.column :subject, :created_at, :actions

		t.row do |r, contact_mail|
			r.cell link_to_show(contact_mail.subject, contact_mail)
			r.cell contact_mail.created_at
			r.cell link_to_delete(contact_mail)
		end

		t.foot.row do |r|
			r.cell will_paginate(@contact_mails), :class => :pagination, :colspan => :all
		end

		t.empty :p, :class => 'empty' do
			t(:'adva.contact_mails.no_mails')
		end
	end
%>
