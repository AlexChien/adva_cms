<h2>Album settings</h2>

<% f.field_set :album_settings do %>
  <% column do %>
    <%= f.text_field :photos_per_page, :class => 'short', :label => true %>
	<% end %>

  <% column do %>
    <%= f.select :content_filter, filter_options, :label => true, :hint => :'adva.sections.hints.content_filter' %>
	<% end %>
<% end %>
