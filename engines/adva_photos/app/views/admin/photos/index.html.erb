<% content_for :sidebar do -%>
  <h3><%= t(:'adva.photos.common.manage') %></h3>
  <ul>
    <li><%= link_to t(:'adva.photos.common.photos'), admin_photos_path(@site, @section) %></li>
		<li><%= link_to t(:'adva.photos.common.sets'), admin_sets_path(@site, @section) %></li>
    <li><%= link_to t(:'adva.photos.common.settings'), edit_admin_section_path(@site, @section), :id => 'settings_section' %></li>
  </ul>

  <h3><%= t(:'adva.photos.common.actions') %></h3>
  <ul>
    <li><%= link_to t(:'adva.photos.admin.photos.upload_photo'), new_admin_photo_path(@site, @section) %></li>
  </ul>
<% end -%>

<% unless @photos.empty? -%>

  <p class="total">
    <%= t(:'adva.photos.admin.photos.total', :total_entries => @photos.total_entries) %>
  </p>

	<%
		table_for @photos do |t|
			t.columns :title, :name, :comments, :published, :author, :actions
			t.body do |r, photo, index|
	  		r.cell link_to(photo.title, edit_admin_photo_path(@site, @section, photo), :class => photo.state)
				r.cell link_to(image_tag(photo.base_url(:tiny)), photo.filename, :target => '_blank')
				r.cell photo.accept_comments? && !photo.comments.empty? ? link_to(photo.comments.size, admin_comments_path) : t(:"adva.common.none")
				r.cell published_at_formatted(photo)
				r.cell link_to h(photo.author_name), admin_site_user_path(@site, photo.author) + "\n" +
				       edit_resource_link(photo, edit_admin_photo_path(@site, @section, photo)) + "\n" +
				       delete_resource_link(photo, admin_photo_path(@site, @section, photo), :confirm => t(:'adva.photos.admin.photos.delete_photo_confirmation'))
			end
		end
	%>

  <%= will_paginate @photos, :id => 'pagination' %>

<% else %>

  <div class="empty">
			<%= t(:'adva.photos.admin.photos.no_photo_in_album') %>
      <%= link_to t(:'adva.photos.admin.photos.upload_now'), new_admin_photo_path(@site) %>
  </div>

<% end %>