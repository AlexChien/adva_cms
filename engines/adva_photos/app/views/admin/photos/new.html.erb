<% split_form_for :photo, @photo, :url => admin_photos_path(@site, @photo.section), :html => {:multipart => true, :id => 'content_form'} do |f| -%>
  <%= render :partial => 'form', :locals => {:f => f} %>  

  <% f.buttons do %>
    <%= submit_tag "Upload" %> <%= t(:'adva.common.connector.or') %>
    <%= link_to t(:'adva.common.cancel'), admin_photos_path(@site, @photo.section) %>
  <% end %>
<% end -%>