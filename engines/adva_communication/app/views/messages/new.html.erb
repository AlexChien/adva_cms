<% form_for :message, @message, :url => messages_path do |f| -%>
	<fieldset class="clearfix">
		<p>
	  	<%= f.label :recipient %>
	  	<%= f.select :recipient_id, recipients_list(@site) %>
		</p>
		
		<p>
	  	<%= f.label :subject %>
	  	<%= f.text_field :subject, :class => 'big' %>
  	</p>
	  
		<p>
			<%= f.label :body %>
	  	<%= f.text_area :body, :class => 'fat', :rows => 25 %>
		</p>
		
		<p>
    	<%= f.submit t(:'adva.common.save') %> <%= t(:'adva.common.connector.or') %>
    	<%= link_to t(:'adva.common.cancel'), messages_path %>
		</p>
	</fieldset>
<% end -%>